<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Panel width="auto" id="mPanlAllId" expand="onExpand" app:filterId="mPanlAllId" expanded="false" class="sapUiTinyMargin" expandable="true">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="{JModel>/otherCountryTotal}" level="Auto"/>
					<ToolbarSpacer/>
					<SearchField liveChange="onLivOtrCntry">
						<layoutData><OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/></layoutData>
					</SearchField>
					<Button tooltip="View Sort Settings" icon="sap-icon://sort" press="onPrsSort"/>
					<Button tooltip="Refresh" icon="sap-icon://refresh" press="onPrsBtnRefresh"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<content>
			<Table id="mTblCovidOtherCtryId" inset="false" growing="true" growingThreshold="100" alternateRowColors="true"
				items="{ path: 'JModel>/AllCountryData'}" class="sapUiNoMargin">
				<columns>
					<Column width="30%">
						<Text text="Country Name"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
						<Text text="Total Confirmed Cases"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
						<Text text="Total Active Cases"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Total Recoverd Cases"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
						<Text text="Death Case"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center">
						<Text text="New Deaths"/>
					</Column>
					<Column minScreenWidth="Desktop" demandPopin="true" hAlign="End">
						<Text text="Serious Critical"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{JModel>country_name}"/>
							<ObjectNumber number="{JModel>cases}"/>
							<ObjectNumber number="{JModel>active_cases}" state="Warning"/>
							<ObjectNumber number="{JModel>total_recovered}" state="Success"/>
							<ObjectNumber number="{JModel>deaths}" state="Error"/>
							<ObjectNumber number="{JModel>new_deaths}" state="Information"/>
							<ObjectIdentifier text="{JModel>serious_critical}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Panel>
</core:FragmentDefinition>